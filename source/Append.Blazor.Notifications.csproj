<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Append.Blazor.Notifications</RootNamespace>
    <AssemblyName>Append.Blazor.Notifications</AssemblyName>
    <Authors>Benjamin Vertonghen, Nicolas Sargos</Authors>
    <Company>Append</Company>
    <Description>HTML5 Notifications API implementation for Microsoft Blazor</Description>
    <Copyright>Benjamin Vertonghen, Nicolas Sargos</Copyright>
    <PackageProjectUrl>https://github.com/nicolassargos/Blazor.Notifications</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nicolassargos/Blazor.Notifications</RepositoryUrl>
    <PackageTags>Blazor;Notifications;.NET;Razor;HTML</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Version>1.2.0</Version>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.9" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
